RTEMS_CROSS_TARGET=@rtems_cv_prog_cc_cross@

RTEMS_HOST = @RTEMS_HOST@
RTEMS_HAS_MULTIPROCESSING = @RTEMS_HAS_MULTIPROCESSING@
RTEMS_HAS_POSIX_API = @RTEMS_HAS_POSIX_API@
RTEMS_HAS_ITRON_API = @RTEMS_HAS_ITRON_API@
